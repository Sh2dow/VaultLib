<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Authors>heyitsleo/NFSTools</Authors>
    <Company>NFSTools</Company>
    <Description>Core library for processing VLT files - requires supplemental game modules</Description>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageId>VaultLib.Core</PackageId>
    <Platforms>x86</Platforms>
    <Product>VaultLib.Core</Product>
    <LangVersion>default</LangVersion>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Version>1.2.0</Version>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="MSBuildGitHash" Version="0.5.0" />
    <PackageReference Include="MvvmCross" Version="6.4.1" />
    <PackageReference Include="NFSTools.Core.Data" Version="1.0.2" />
    <PackageReference Include="NFSTools.Core.GameUtilities" Version="1.0.4" />
    <PackageReference Include="NFSTools.Core.IO" Version="1.0.3" />
    <PackageReference Include="NFSTools.Core.ModuleSystem" Version="1.0.3" />
    <PackageReference Include="System.ComponentModel.Composition" Version="4.7.0" />
  </ItemGroup>

</Project>
